{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="my-5">Page non trouvée (erreur 404)</h1>
                <p>La page que vous cherchez n'a pas été trouvée</p>
                <p>Code de l'erreur : {{ status_code }}</p>
                <p>Message de l'erreur : {{ status_text }}</p>
                <p>Message de l'erreur personnalisée 
                    (avec « throw $this->createNotFoundException('message personnalisé') »): 
                    {{ exception.message }}
                </p>
                <p><a href="{{ path('home') }}">Retour à la page d'accueil</a></p>
                {{ dump() }}
            </div>
        </div>
    </div>
{% endblock %}